{
    "include": ["./src"],
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "node",
        "removeComments": true,
        "outDir": "dist",
        "alwaysStrict": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "emitDecoratorMetadata": true
    }
}